<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="230dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/siRewardShare"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_share3"
                    app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.MediumComponent" />

                <TextView
                    android:id="@+id/tvRewardRequiredNumReferal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/siRewardPerson"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginBottom="4dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person2"
                    app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.MediumComponent"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>


        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siRewardImage"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_foodmenu"
            app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.MediumComponent"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tvRewardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iphone 12 pr0"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center" />

        <Button
            android:id="@+id/btRewardClaim"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="Locked"
            android:textSize="10sp"
            app:backgroundTint="@null" />


    </LinearLayout>

</androidx.cardview.widget.CardView>
