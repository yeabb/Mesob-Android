<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Food Picture -->
    <ImageView
        android:id="@+id/ivFoodMenuIcon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Gas Station Icon"
        android:src="@drawable/ic_foodmenu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- Food Menu Name -->
    <TextView
        android:id="@+id/tvFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Menu Name"
        android:textSize="28sp"
        android:textColor="#333333"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ivFoodMenuIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Food Menu Ingredients -->

    <TextView
        android:id="@+id/tvFoodIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Onion, Flour, Tomatoes, Salad, Injera, Pita, Pickles, Lettus "
        android:textSize="20sp"
        android:textColor="#333333"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/tvFoodName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />



    <!-- Get Directions Button -->
    <Button
        android:id="@+id/btToGoogleMap"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Get Directions"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:elevation="4dp"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@+id/tvFoodIngredients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Separator Line -->
    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#ECECEC"
        app:layout_constraintTop_toBottomOf="@+id/btToGoogleMap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@+id/separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Card Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Rating Bar Container -->
            <LinearLayout
                android:id="@+id/llRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- 5 Stars -->
                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_filled_star"
                    android:onClick="onStarClick" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_filled_star"
                    android:onClick="onStarClick" />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_empty_star"
                    android:onClick="onStarClick" />

                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_empty_star"
                    android:onClick="onStarClick" />

                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_empty_star"
                    android:onClick="onStarClick" />
            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please consider rating this menu"
                android:textSize="20sp"
                android:textColor="#333333"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btReserveFood"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Reserve Food"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:elevation="4dp"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
