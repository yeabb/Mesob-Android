<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siFoodImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_foodmenu"
            app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.MediumComponent"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tvFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicken Shawarna"
                android:textSize="14sp"
                android:textColor="#FF3000"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Naya"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tvFoodPickUpDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="October 12, 2023"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tvSavePercentageDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text=" You SAVED 20%"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:background="#00FF00"/>





        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
